<%
var numWords = 0;
var content = post.content.split(" ");
for (i=0 ; i < content.length ; i++){
       if (content[i] != "") numWords ++; 
}
var minutes = Math.round(numWords / 180);

var authName,
    authTwitter;
switch (post.author) 
{
    case "christoph_burgdorf":
        authName = "Christoph Burgdorf";
        authTwitter = "http://twitter.com/cburgdorf";
        break;
    case "pascal_precht":
        authName = "Pascal Precht";
        authTwitter = "http://twitter.com/PascalPrecht";
        break;
    case "thomas_burleson":
        authName = "Thomas Burleson";
        authTwitter = "http://twitter.com/thomasburleson";
        break;
    default:
        break;
}
%>
<div class="thtrm-banner" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.01) 2%,#29383E 100%), url('<%= post.imageUrl %>');">
    <hgroup class="thtrm-banner-container">
        <div class="thtrm-constraint thtrm-constraint--slim">
            <h2 class="thtrm-banner-text"><%= post.title %></h2>
            <span>by <a href="<%= authTwitter %>" title="<%= authName %> on Twitter"><%= authName %></a> on <%= date(post.date, config.date_format) %><br><%= minutes %> minute read</span>
        </div>
    </hgroup>
</div>