<%
var numWords = 0;
var content = post.content.split(" ");
for (i=0 ; i < content.length ; i++){
       if (content[i] != "") numWords ++; 
}
var minutes = Math.round(numWords / 180);
%>
<div class="thtrm-banner" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.01) 2%,#29383E 100%), url('<%= post.imageUrl %>');">
    <hgroup class="thtrm-banner-container">
        <div class="thtrm-constraint thtrm-constraint--slim">
            <h2 class="thtrm-banner-text"><%= post.title %></h2>
            <span>by <a href="<%- author(post.author, 'twitter') %>" title="<%- author(post.author, 'name') %> on Twitter"><%- author(post.author, 'name') %></a> on <%= date(post.date, config.date_format) %><br><%= minutes %> minute read</span>
        </div>
    </hgroup>
</div>