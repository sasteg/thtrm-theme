<h2 class="thtrm-section-headline thtrm-section-headline--with-margin">Latest</h2>
<% if (site.posts.length){ %>
    <div class="thtrm-table-layout">
        <div class="thtrm-table-layout-row thtrm-table-layout-row--with-two-columns thtrm-table-layout-row--2-3">
            <div class="thtrm-table-layout-cell">
                <% site.posts.sort('date', -1).limit(3).each(function(post, i){ %>
                    <% 
                    var categoryRaw = '';
                    var categoryFormatted = '';

                    post.categories.forEach(function(item){
                        //console.log(item.name)
                        categoryRaw = item.name;

                        switch(item.name) { 
                            case 'angular':
                                categoryFormatted = "Angular";
                                break;
                            case 'announcements':
                                categoryFormatted = "Announcement";
                                break;
                            case 'angularjs':
                                categoryFormatted = "Angular";
                                break;
                            case 'git':
                                categoryFormatted = "Git";
                                break;
                            case 'rust':
                                categoryFormatted = "Rust";
                                break;
                            case 'rx':
                                categoryFormatted = "Rx";
                                break;
                            default:
                                break;
                        } 
                    }) 
                    %>
                    <% if (i===0) { %>
                        <a title="<%= post.title %>" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.01) 2%,#29383E 100%), url('<%= post.imageUrl %>');" href="<%- url_for(post.path) %>" class="thtrm-promo-item">
                            <div class="thtrm-promo-item-info">
                                <span class="thtrm-category-badge thtrm-category-badge--<%= categoryRaw %>"><%= categoryFormatted %></span>
                                <h2><%= post.title %></h2>
                                <span><i class="material-icons">schedule</i> <%= date(post.date, config.date_format) %></span>
                                <span class="thtrm-promo-item-info-author">
                                    <i class="material-icons">create</i>
                                    <%- author(post.author, 'name') %>
                                </span>
                            </div>
                        </a>
                        </div>
                        <div class="thtrm-table-layout-cell">
                    <% } else { %>
                        <a title="<%= post.title %>" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.01) 2%,#29383E 100%), url('<%= post.imageUrl %>');" href="<%- url_for(post.path) %>" class="thtrm-promo-item thtrm-promo-item--sub">
                            <div class="thtrm-promo-item-info">
                                <span class="thtrm-category-badge thtrm-category-badge--<%= categoryRaw %>"><%= categoryFormatted %></span>
                                <h3><%= post.title %></h3>
                                <span><i class="material-icons">schedule</i> <%= date(post.date, config.date_format) %></span>
                                <span class="thtrm-promo-item-info-author">
                                    <i class="material-icons">create</i>
                                    <%- author(post.author, 'name') %>
                                </span>
                            </div>
                        </a>
                    <% } %>
                <% }) %>
            </div>
        </div>
    </div>
<% } %>